<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>VrijemeServlet</servlet-name>
        <servlet-class>com.jeeplatforma.examples.VrijemeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PozdravniServlet</servlet-name>
        <servlet-class>com.servleti.examples.PozdravniServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IspisZaglavljaServlet</servlet-name>
        <servlet-class>com.servleti.examples.IspisZaglavljaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ZaglavljaOdgovoraServlet</servlet-name>
        <servlet-class>com.servleti.examples.ZaglavljaOdgovoraServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SlanjePDFServlet</servlet-name>
        <servlet-class>com.servleti.examples.SlanjePDFServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VrijemeServlet</servlet-name>
        <url-pattern>/Vrijeme</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PozdravniServlet</servlet-name>
        <url-pattern>/Pozdravni</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IspisZaglavljaServlet</servlet-name>
        <url-pattern>/IspisZaglavlja</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ZaglavljaOdgovoraServlet</servlet-name>
        <url-pattern>/ZaglavljaOdgovora</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SlanjePDFServlet</servlet-name>
        <url-pattern>/SlanjePDF</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
